<!DOCTYPE html>
<html lang="en">
<head>
	<title>{{resto.restoName}}</title>
	<link rel="stylesheet" type="text/css" href="../../CSS/index.css">
	{{#if flag}}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="../js/resto.js" type="text/javascript"></script>
	{{/if}}
	<style>
		body{
			background-color: #FFD400;
		}
	</style>
</head>
<body>
	{{>navbar flag=flag uname=curUser}}
    <div class="profileSummary">
        <div class = "profPic">
            <img src="{{resto.profPic}}" class = "picture" alt="">
            <div id="restoName" style="font-size: 40px; font-family: Carter One">{{resto.restoName}}</div>
        </div>
		<div class = "random-fact">
			<div class = "quote-stuff">
				<div class = "quote">{{resto.address}}</div>
				<div class = "quote_desc" style = "font-size: 20px; font-family: Carter One;">{{resto.greetings}}</div>
			</div>
			<div style="font-size: 50px; width: 100%; font-family: Carter One; font-size: 40px;">About</h1>
				<div style="font-size: 20px; font-family: Carter One;">{{resto.about}}</div>
			</div>
		</div>
    </div>

    <!-- <section class="profileAbout" style="
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        justify-content: flex-start;
        align-items: flex-start;
        align-content: stretch;
    ">
        <h1>About</h1>
        <div></div>
    </section> -->

	<div class="newreview">			
		{{#if flag}}
			<h1 style = "font-family: Carter One; margin-left: 10px;">New Review</h1>
			<div class="review">
				<form style="display: flex; flex-direction: column; align-items: left; padding-left: 5%; padding-top: 1%;">
					<div id="restoMail" style="display: none;">{{resto.email}}</div>
					<div id="username">{{curUser}}</div>
					<textarea id="restoComment" placeholder="Comment" rows="4" cols="50" required style="width: 90%;"></textarea><br>
					<button type="submit">Submit</button><br>	
				</form>
			</div>
		{{/if}}
		<h1 style = "font-family: Carter One; margin-left: 10px;">Recent Reviews</h1>
		<div class="reviewList">	
			{{#each resto.reviews}}
				{{> review this}}
			{{/each}}			
		</div>
	</div>
</body>
</html>